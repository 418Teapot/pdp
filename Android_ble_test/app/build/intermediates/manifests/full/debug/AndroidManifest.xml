<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.http418.oconn"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="dk.http418.oconn.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/o"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="dk.http418.oconn.Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="dk.http418.oconn.SelectVeggie" >
        </activity>
        <activity
            android:name="dk.http418.oconn.Device"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

        <service
            android:name="dk.http418.oconn.RBLService"
            android:enabled="true" />

        <activity
            android:name="dk.http418.oconn.VeggieWeight"
            android:label="@string/title_activity_veggie_weight"
            android:parentActivityName="dk.http418.oconn.SelectVeggie" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dk.http418.oconn.SelectVeggie" />
        </activity>
    </application>

</manifest>