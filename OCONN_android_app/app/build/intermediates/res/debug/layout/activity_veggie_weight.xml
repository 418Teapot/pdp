<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dk.http418.oconn.VeggieWeight">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/veggieName"
        android:layout_centerHorizontal="true"
        android:text="DIN MOR MAND!"
        android:textSize="22dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_marginTop="10dp"
        android:id="@+id/veggieW_img"
        android:src="@drawable/test"
        android:layout_below="@id/veggieName"
        android:layout_centerHorizontal="true"
        android:layout_height="250dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/veggieW_img"
        android:id="@+id/currWeight"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/veggieW_img"
        android:layout_toRightOf="@id/currWeight"
        android:gravity="center"
        android:id="@+id/totalWeight"
        android:layout_centerHorizontal="true"
        android:text="/2000g"
        android:layout_marginTop="10dp"
        />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/totalWeight"
        android:id="@+id/weightProgress"
        style="@android:style/Widget.ProgressBar.Horizontal"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/weightProgress"
        android:layout_marginTop="20dp"
        android:id="@+id/confirmWeightBtn"
        android:text="Jeg har nok!" />

</RelativeLayout>
